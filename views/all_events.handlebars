<h2 class="text-center font-weight-bold mb-3 ">Recent Events</h2>
<p class="text-center mx-auto w-responsive mb-3">One of the best ways to identify opportunities and stay up to date
    with modern trends is to follow the companies and Vest Co who are leading the way.</p>
{{#each events}}
<div class="card card-body mb-2">

    {{!-- <h4>{{title}}</h4>
    <p>{{details}}</p>
    <p>{{location}} &&{{city}}</p>
    <p>{{phone}}</p>
    <p>{{time}}</p> --}}
    <div class="container mt-2">

        <!-- Grid row -->
        <div class="row align-items-center">

            <!-- Grid column -->
            <div class="col-md-6 col-xl-4">

                <!-- Featured image -->
                <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-2">
                    <img class="img-fluid" src="https://picsum.photos/400/300" alt="Sample image">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-6 col-xl-8">

                <!-- Post title -->
                <h4 class="font-weight-bold mb-2"><strong>{{title}}</strong></h4>
                <!-- Excerpt -->
                <p class="dark-grey-text">{{details}}</p>
                <!-- Post data -->
                <p>
                    <strong>Location</strong> <a class=""> {{location}}</a>
                    <strong class="ml-5 font-weight-bold">Event Date</strong> <a class="font-italic font-weight-lighter">
                        {{time}}</a>


                </p>

                <!-- Read more button -->
                <a class="btn btn-primary btn-md mx-0 btn-rounded">Contact</a>
                <a class="btn btn-primary btn-md mx-2 btn-rounded">Join us</a>

            </div>
            <!-- Grid column -->

        </div>
        <!-- Grid row -->
    </div>


</div>
{{else}}

<p>There is no event soon...</p>



{{/each}}