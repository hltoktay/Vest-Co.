<div class="container">

    <form action="/events/find_events" method="GET" class="">
        <div class="row footer_find ">
            <div class="col-md-12 col-sm-12 col-lg-12">
                <div class="input-group md-form form-sm form-1 pl-0">
                    <div class="input-group-prepend">
                        <span class="input-group-text cyan lighten-3" id="basic-text1"><i class="fas fa-search text-white"
                                aria-hidden="true"></i></span>
                    </div>
                    <input class="form-control my-0 py-1" type="text" name="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-prepend">
                        <input type="submit" value="Search" class="btn btn-cyan">
                    </div>
                </div>
            </div>
        </div>
    </form>


</div>
<h2 class="text-center font-weight-bold mb-3 ">My Events</h2>
<p class="text-center mx-auto w-responsive mb-3">One of the best ways to identify opportunities and stay up to date
    with modern trends is to follow the companies and Vest Co who are leading the way.</p>
{{#each events}}

<div class="card card-body mb-2">


    <div class=" container mt-2">

        <!-- Grid row -->
        <div class="row align-items-center">

            <!-- Grid column -->
            <div class="col-md-6 col-xl-4">

                <!-- Featured image -->
                <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-2">
                    <img class="img-fluid" src="https://picsum.photos/400/300" alt="Sample image">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-6 col-xl-4">

                <!-- Post title -->
                <h4 class="
                font-weight-bold mb-2"><strong>{{title}}</strong></h4>
                <!-- Excerpt -->
                <p class="dark-grey-text">{{details}}</p>
                <!-- Post data -->
                <p><strong> Date:</strong><a class="font-weight-bold"></a> {{time}}</p>
                <p><strong>Location:</strong> <a class="font-weight-bold"></a> {{location}}</p>
                <!-- Read more button -->
                <strong>Contact:</strong><a class=""> {{phone}}</a>

                <div class="row pl-2">
                    <a class="btn btn-dark btn-sm" href="/events/edit/{{id}}">Edit</a>
                    <form method="post" action="/events/{{id}}?_method=DELETE">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" class="btn btn-danger btn-sm" value="Delete">
                    </form>
                </div>

            </div>
            <!-- Grid column -->

        </div>
        <!-- Grid row -->
    </div>




</div>
{{else}}
<div class="container">
    <p>No event organized yet...</p>
    <div class="footer_empty">

    </div>
</div>
{{/each}}