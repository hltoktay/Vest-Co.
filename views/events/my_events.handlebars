<h2 class="text-center font-weight-bold mb-3 ">My Events</h2>
<p class="text-center mx-auto w-responsive mb-3">One of the best ways to identify opportunities and stay up to date
    with modern trends is to follow the companies and Vest Co who are leading the way.</p>
{{#each events}}
<div class="card card-body mb-2">


    <div class="container mt-2">

        <!-- Grid row -->
        <div class="row align-items-center">

            <!-- Grid column -->
            <div class="col-md-6 col-xl-4">

                <!-- Featured image -->
                <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-2">
                    <img class="img-fluid" src="https://picsum.photos/400/300" alt="Sample image">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

            </div>
            <!-- Grid column -->

            <!-- Grid column -->
            <div class="col-md-6 col-xl-4">

                <!-- Post title -->
                <h4 class="font-weight-bold mb-2"><strong>{{title}}</strong></h4>
                <!-- Excerpt -->
                <p class="dark-grey-text">{{details}}</p>
                <!-- Post data -->
                <p><strong> Date:</strong><a class="font-weight-bold"></a> {{time}}</p>
                <p><strong>Location:</strong> <a class="font-weight-bold"></a> {{location}}</p>
                <!-- Read more button -->
                <a class="btn btn-primary btn-md mx-0 btn-rounded">Contact</a>

                <div class="row pl-2">
                    <a class="btn btn-dark btn-sm" href="/events/edit/{{id}}">Edit</a>
                    <form method="post" action="/events/{{id}}?_method=DELETE">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="submit" class="btn btn-danger btn-sm" value="Delete">
                    </form>
                </div>

            </div>
            <!-- Grid column -->

        </div>
        <!-- Grid row -->
    </div>




</div>
{{else}}
<p>No events lsited</p>
{{/each}}